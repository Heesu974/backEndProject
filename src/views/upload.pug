extends base.pug

block content 
    if errorMessage 
        span #{errorMessage}
    form(method="post")
        input(type="text", name="title", placeholder="Title", required, maxlength="20")
        input(type="text", name="description", placeholder="Description", required, minlength="20")
        input(type="text", name="hashtags", placeholder="Hashtags, Seperated by comma", required)
        input(type="submit", value="Upload Video")
         
